;
; Segment ordering and grouping for distribution

.SEQ

;
; 32-bit code
;

_TEXT32 SEGMENT WORD PUBLIC USE32 'FLATCODE'
_TEXT32 ENDS

;
; 32-bit data
;

CONST32 SEGMENT WORD PUBLIC USE32 'FLATDATA'
		assume	ds:FLAT
CONST32 ENDS

CONST232 SEGMENT WORD PUBLIC USE32 'FLATDATA'
		assume	ds:FLAT
CONST232 ENDS

_DATA32 SEGMENT WORD PUBLIC USE32 'FLATDATA'
		assume	ds:FLAT
_DATA32 ENDS

_BSS32 SEGMENT WORD PUBLIC USE32 'FLATBSS'
		assume	ds:FLAT
_BSS32 ENDS

;
; Resulting groups
;

CODE32  GROUP   _TEXT32
DGROUP32 GROUP  CONST32, CONST232, _DATA32, _BSS32
