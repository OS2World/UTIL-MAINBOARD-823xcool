;
; Segment ordering and grouping for distribution

.SEQ

;
; 16-bit DGROUP with DD header
;

_DDHDR	SEGMENT WORD PUBLIC 'DATA'
_DDHDR	ENDS

CONST	SEGMENT	WORD PUBLIC 'CONST'
CONST	ENDS

_DATA	SEGMENT WORD PUBLIC 'DATA'
_DATA	ENDS

_BSS	SEGMENT	WORD PUBLIC 'BSS'
_BSS	ENDS

FAR_BSS	SEGMENT	WORD PUBLIC 'FAR_BSS'
FAR_BSS	ENDS

DATAEND SEGMENT WORD PUBLIC 'ZD'
DATAEND ENDS

;
; 16-bit main code segment
;

_TEXT	SEGMENT	WORD PUBLIC 'CODE'
_TEXT	ENDS

CODE	SEGMENT	WORD PUBLIC 'CODE'
CODE	ENDS

IFDEF	RM_RESIDENT
RMCode	SEGMENT	WORD PUBLIC 'CODE'
RMCode	ENDS
ENDIF

TEXTEND	SEGMENT	WORD PUBLIC 'CODE'
TEXTEND	ENDS

IFNDEF	RM_RESIDENT
RMCode	SEGMENT	WORD PUBLIC 'CODE'
RMCode	ENDS
ENDIF

;
; Resulting groups
;

CODE16	GROUP	_TEXT, CODE, RMCode, TEXTEND
DGROUP	GROUP	_DDHDR, CONST, _DATA, _BSS, FAR_BSS, DATAEND
